<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="课程表" />

    <TextView
        android:id="@+id/helloTv"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="   你好，本周第X周，今天是周X"
        android:textSize="20dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/Date_Mon"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0.1" />

            <TextView
                android:id="@+id/Date_Tue"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0.2" />

            <TextView
                android:id="@+id/Date_Wed"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0.3" />

            <TextView
                android:id="@+id/Date_Thur"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0.4" />

            <TextView
                android:id="@+id/Date_Fri"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0.5" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="30dp"
                android:gravity="center"
                android:text="星期一" />

            <TextView
                android:layout_height="30dp"
                android:gravity="center"
                android:text="星期二" />

            <TextView
                android:layout_height="30dp"
                android:gravity="center"
                android:text="星期三" />

            <TextView
                android:layout_height="30dp"
                android:gravity="center"
                android:text="星期四" />

            <TextView
                android:layout_height="30dp"
                android:gravity="center"
                android:text="星期五" />
        </TableRow>


        <TableRow>

            <TextView
                android:id="@+id/Table_1_1"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="1.1" />

            <TextView
                android:id="@+id/Table_1_2"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="1.2" />

            <TextView
                android:id="@+id/Table_1_3"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="1.3" />

            <TextView
                android:id="@+id/Table_1_4"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="1.4" />

            <TextView
                android:id="@+id/Table_1_5"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="1.5" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/Table_2_2"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="2.1" />

            <TextView
                android:id="@+id/Table_2_3"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="2.2" />

            <TextView
                android:id="@+id/Table_2_4"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="2.3" />

            <TextView
                android:id="@+id/Table_2_5"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="2.4" />

            <TextView
                android:id="@+id/Table_2_1"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="2.5" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/Table_3_1"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="3.1" />

            <TextView
                android:id="@+id/Table_3_2"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="3.2" />

            <TextView
                android:id="@+id/Table_3_3"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="3.3" />

            <TextView
                android:id="@+id/Table_3_4"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="3.4" />

            <TextView
                android:id="@+id/Table_3_5"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="3.5" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/Table_4_1"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="4.1" />

            <TextView
                android:id="@+id/Table_4_2"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="4.2" />

            <TextView
                android:id="@+id/Table_4_3"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="4.3" />

            <TextView
                android:id="@+id/Table_4_4"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="4.4" />

            <TextView
                android:id="@+id/Table_4_5"
                android:layout_height="125dp"
                android:gravity="center"
                android:text="4.5" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/LeftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一周" />

        <TextView
            android:id="@+id/CenterTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="    第X周    "
            android:textSize="25dp" />

        <Button
            android:id="@+id/RightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一周" />

    </LinearLayout>


</LinearLayout>

